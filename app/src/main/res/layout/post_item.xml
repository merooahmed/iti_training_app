<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"


        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/purple_500">



    <TextView
        android:id="@+id/user_name1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        />
            <TextView
                android:id="@+id/username_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/user_name1_label"
                app:layout_constraintStart_toEndOf="@id/user_name1_label"
                android:layout_marginStart="10dp"/>





            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="title"

                app:layout_constraintTop_toBottomOf="@id/post1_label"
                app:layout_constraintStart_toStartOf="@id/user_name1_label"
                android:layout_marginStart="0dp"



                />
            <TextView
                android:id="@+id/title_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/title_tv"
                app:layout_constraintStart_toEndOf="@id/user_name1_label"
                android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/date1_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="post id"
        app:layout_constraintStart_toStartOf="@id/user_name1_label"
        app:layout_constraintTop_toBottomOf="@+id/user_name1_label"
        android:layout_marginStart="0dp"
        />
    <TextView
        android:id="@+id/date1_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/date1_label"
        app:layout_constraintStart_toEndOf="@id/user_name1_label"
        android:layout_marginStart="10dp"



        />
    <TextView
        android:id="@+id/post1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="body:"
        app:layout_constraintTop_toBottomOf="@+id/date1_label"
        app:layout_constraintStart_toStartOf="@id/user_name1_label"
        android:layout_marginStart="0dp"
        />
    <TextView
        android:id="@+id/post1_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/post1_label"
        app:layout_constraintStart_toEndOf="@id/post1_label"
        android:layout_marginStart="10dp"



        />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_button"
                app:layout_constraintTop_toBottomOf="@id/title_tv"

                app:layout_constraintStart_toStartOf="@id/post1_label"
                 android:layout_marginTop="30dp"
                android:layout_marginLeft="150dp"
                android:text="more details"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
